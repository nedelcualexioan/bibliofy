    <!-- Content -->
    <main class="container">
        <!-- Membership -->
        <section>
            <h1 class="display-1 text-center pt-5 my-3 ff-primary def-border border-top-0">Membership</h1>
            <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
                <div class="col">
                    <div class="card mb-4 rounded-3 shadow-sm">
                        <div class="card-header py-3">
                            <h4 class="my-0 fw-normal">Free</h4>
                        </div>
                        <div class="card-body">
                            <h1 class="card-title pricing-card-title">Free</h1>
                            <ul class="list-unstyled mt-3 mb-4">
                                <li>Borowing books is limited to 3 every month</li>
                                <li>Shipping fees included</li>
                            </ul>
                            <button type="button" class="w-100 btn btn-lg <%= user.membership === 'Free' ? 'btn-outline-dark' : 'btn-dark' %> btnSubscription">
                                <%= user.membership === "Free" ? "Current Plan" : "Get Started" %>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card mb-4 rounded-3 shadow-sm">
                        <div class="card-header py-3">
                            <h4 class="my-0 fw-normal">Pro</h4>
                        </div>
                        <div class="card-body">
                            <h1 class="card-title pricing-card-title">$15<small
                                    class="text-body-secondary fw-light">/mo</small></h1>
                            <ul class="list-unstyled mt-3 mb-4">
                                <li>Borowing books is limited to 5 every month</li>
                                <li>Shipping is free</li>
                            </ul>
                            <button type="button" class="w-100 btn btn-lg <%= user.membership === 'Pro' ? 'btn-outline-dark' : 'btn-dark' %> btnSubscription">
                                <%= user.membership === "Pro" ? "Current Plan" : "Get Started" %>
                            </button>
                        </div>
                    </div>
                </div>
                <div class="col">
                    <div class="card mb-4 rounded-3 shadow-sm border-dark">
                        <div class="card-header py-3 text-bg-dark border-dark">
                            <h4 class="my-0 fw-normal">Enterprise</h4>
                        </div>
                        <div class="card-body">
                            <h1 class="card-title pricing-card-title">$29<small
                                    class="text-body-secondary fw-light">/mo</small>
                            </h1>
                            <ul class="list-unstyled mt-3 mb-4">
                                <li>Borowing books is not limited every month</li>
                                <li>Shipping is free</li>
                            </ul>
                            <button type="button" class="w-100 btn btn-lg <%= user.membership === 'Enterprise' ? 'btn-outline-dark' : 'btn-dark' %> btnSubscription">
                                <%= user.membership === "Enterprise" ? "Current Plan" : "Get Started" %>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Orders -->
        <section>
            <h1 class="display-1 text-center pt-5 my-3 ff-primary def-border border-top-0">Orders</h1>
            <div class="container">
                <article class="card">
                    <header class="card-header">My Orders</header>
                    <% orders.forEach(order=> { %>
                        <div class="card-body">
                            <h6>Order ID: <%= order._id.toString().toUpperCase() %>
                            </h6>
                            <article class="card">
                                <div
                                    class="card-body d-flex flex-wrap justify-content-evenly align-items-center text-center gap-5">
                                    <div><b>Estimated delivery time:</b><br><%= formatDate(order.createdAt) %></div>
                                    <div><b>Shipping by:</b><br>Shipper</div>
                                    <div><b>Status:</b><br><%= order.status %></div>
                                </div>
                            </article>
                            <ul class="row m-0 row-cols-12 list-unstyled g-5">
                                <% order.products.forEach(product=> { %>
                                    <li class="col-md-6 border rounded ">
                                        <div class="row m-0 row-cols-1 row-cols-md-3 text-center align-items-center g-5 mb-5">
                                            <div class="col"><img class="mx-auto" alt="book image" src=<%=product.product.image%>></div>
                                            <div class="col">
                                                <h4><%= product.product.title %></h4>
                                            </div>
                                            <div class="col">
                                                <h4><%=product.quantity%>x</h4>
                                            </div>
                                        </div>
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                        <% }) %>
                </article>
            </div>
        </section>
        <!-- Change account information-->
        <h1 class="display-1 text-center pt-5 my-3 ff-primary def-border border-top-0">Change Account Information</h1>
        <section class="card my-5">
            <h5 class="card-header">Account Details</h5>
            <div class="card-body">
                <% if (messages.details) { %>
                    <div class="alert alert-success" role="alert">
                        <%= messages.details %>
                    </div>
                    <% } %>
                        <form class="needs-validation" action="/account/details" method="post">
                            <div class="mb-3">
                                <label class="small mb-1" for="inputUsername" class="form-label">Username (how your name
                                    will appear to other users on the site)</label>
                                <input class="form-control" id="inputUsername" name="username" type="text"
                                    placeholder="Enter your username" value="<%= user.username %>" required>
                            </div>
                            <div class="mb-3">
                                <label class="small mb-1" for="inputEmailAddress" class="form-label">Email
                                    address</label>
                                <input class="form-control" id="inputEmailAddress" name="email" type="email"
                                    placeholder="Enter your email address" value="<%= user.email %>" required>
                            </div>
                            <div class="row gx-3 mb-3">
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputPhone" class="form-label">Phone number</label>
                                    <input class="form-control" id="inputPhone" name="phone_number" type="tel"
                                        placeholder="Enter your phone number" pattern="[0-9]{10}"
                                        value="<%= user.phone_number %>" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="small mb-1" for="inputAddress" class="form-label">Address</label>
                                    <input class="form-control" id="inputAddress" name="address" type="text"
                                        name="address" placeholder="Enter your address" value="<%= user.address %>"
                                        required>
                                </div>
                            </div>
                            <button class="btn btn-dark w-sm-100" type="submit">Save changes</button>
                        </form>
            </div>
        </section>
        <!-- Change password -->
        <section class="card my-5">
            <h5 class="card-header">Change Password</h5>
            <div class="card-body">
                <% if (messages.success) { %>
                    <div class="alert alert-success" role="alert">
                        <%= messages.success %>
                    </div>
                    <% } else if(messages.error) { %>
                        <div class="alert alert-danger" role="alert">
                            <%= messages.error %>
                        </div>
                        <% } %>
                            <form action="/account/password" method="post" onsubmit="return validatePassword()">
                                <div class="mb-3">
                                    <label class="small mb-1" for="currentPassword">Current Password</label>
                                    <input class="form-control" id="currentPassword" name="currentPassword"
                                        type="password" placeholder="Enter current password" required>
                                </div>
                                <div class="mb-3">
                                    <label class="small mb-1" for="newPassword">New Password</label>
                                    <input class="form-control" id="newPassword" name="newPassword" type="password"
                                        placeholder="Enter new password" required>
                                </div>
                                <div class="mb-3">
                                    <label class="small mb-1" for="confirmPassword">Confirm Password</label>
                                    <input class="form-control" id="confirmPassword" name="confirmNewPassword"
                                        type="password" placeholder="Confirm new password" required>
                                </div>
                                <div class="alert alert-danger" role="alert" id="passwordMismatchAlert"
                                    style="display: none;">
                                    Passwords do not match!
                                </div>
                                <button class="btn btn-dark w-sm-100" type="submit">Save</button>
                            </form>
            </div>
        </section>
    </main>
    <!-- Footer -->
    <%- include("partials/footer") -%>
    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
    <script src="/scripts/account.js"></script>
</body>
</html>