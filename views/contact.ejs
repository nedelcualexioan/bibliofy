    <!-- Content -->
    <main class="row m-0 d-flex justify-content-evenly align-items-center my-auto px-md-0 px-sm-5 px-0 py-5">
        <!-- Get in touch-->
        <section class="col-xxl-4 col-lg-5 col-md-6 col-12 mb-md-0 mb-5">
            <div class="row m-0">
                <!-- Title -->           
                <h1 class="display-1 ff-primary text-center">Get in touch</h1>
                <% if (messages.details) { %>
                    <div class="alert alert-success" role="alert">
                      <%= messages.details %>
                    </div>
                <% } %>
                <!-- Form -->
                <form class="col-12 px-0" method="post" action="/contact" id="contactForm" data-sb-form-api-token="API_TOKEN" >
                    <div class="row mx-auto px-0 g-3">
                        <!-- Name -->
                        <div class="col-12">
                            <label class="form-label" for="name">Name</label>
                            <input class="form-control" name="name" id="name" type="text" data-sb-validations="required" />
                            <div class="invalid-feedback" data-sb-feedback="name:required">Name is required.</div>
                        </div>
                        <!-- Email address -->
                        <div class="col-12">
                            <label class="form-label" for="emailAddress">Email Address</label>
                            <input class="form-control" id="emailAddress" name="email" type="email" data-sb-validations="required, email" />
                            <div class="invalid-feedback" data-sb-feedback="emailAddress:required">Email Address is required.</div>
                            <div class="invalid-feedback" data-sb-feedback="emailAddress:email">Email Address is not valid.</div>
                        </div>
                        <!-- Message -->
                        <div class="col-12">
                            <label class="form-label" for="message">Message</label>
                            <textarea class="form-control" name="message" id="message" type="text" style="height: 10rem;" data-sb-validations="required"></textarea>
                            <div class="invalid-feedback" data-sb-feedback="message:required">Message is required.</div>
                        </div>
                        <!-- Submissions success message -->
                        <div class="d-none" id="submitSuccessMessage">
                            <div class="text-center">Form submission successful!</div>
                        </div>
                        <!-- Submissions error message -->
                        <div class="d-none" id="submitErrorMessage">
                            <div class="text-center text-danger">Error sending message!</div>
                        </div>
                        <!-- Submit button -->
                        <div class="col-12">
                            <button class="btn btn-dark btn-lg w-100" id="submitButton" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
