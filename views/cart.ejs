        <div class="my-5 text-center">
            <img class="d-block mx-auto" src="/misc/logo.png" alt="bibliofy" width="128" height="72">
            <h1 class="text-center my-3">Checkout</h1>
            <p class="w-75 lead mx-auto">Please verify your cart contents, when done, input your information and select the pickup point which is closest to you, where you will pick up your products.</p>
        </div>
        <div class="row mx-auto my-5 g-5">
            <div class="col-md-4 order-md-last">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-dark">Your cart</span>
                    <span class="totalProd badge bg-dark rounded-pill"><%= user.cart.totalProducts %></span>
                </h4>
                <ul class="list-group mb-3">
                    <% if(user.cart.products.length === 0 || user.cart == undefined) { %>
                    <li class="list-group-item d-flex justify-content-between lh-sm">
                        <div>
                            <h6 class="my-0">No products so far...</h6>
                            <small class="text-body-secondary">Check out our book shelf!</small>
                        </div>
                    </li>
                    <% } else { %>

                        <% user.cart.products.forEach(product => {%>
                            <% if(product.product){ %>
                                <li class="list-group-item d-flex justify-content-between lh-sm">
                                    <div>
                                        <h6 class="my-0"><%=product.quantity + "x " + product.product.title %></h6>
                                        <small class="text-body-secondary"><%= product.product.author %></small>
                                    </div>
                                    <i class="fa fa-close w3-large rmCart" data-value="<%= product.product._id %>"></i>
                                </li>
                            <% } %>
                        <% }) %>

                    <% } %>
                </ul> 
            </div>
            <div class="col-md-8">
                <h4 class="mb-3">Required information</h4>
                <form class="needs-validation d-flex flex-column" novalidate="" autocomplete="on">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <label for="firstName" class="form-label">First name</label>
                            <input type="text" class="form-control" id="firstName" required="">
                            <div class="invalid-feedback">
                                Valid first name is required.
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="lastName" class="form-label">Last name</label>
                            <input type="text" class="form-control" id="lastName" required="">
                            <div class="invalid-feedback">
                                Valid last name is required.
                            </div>
                        </div>
                        <div class="col-12">
                            <label for="address" class="form-label">Address</label>
                            <input type="text" class="form-control" id="address" required="">
                            <div class="invalid-feedback">
                                Please enter your shipping address.
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" class="form-control" id="country" required="">
                            <div class="invalid-feedback">
                                Please select a valid country.
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label for="city" class="form-label">City</label>
                            <input type="text" class="form-control" id="city" required="">
                            <div class="invalid-feedback">
                                Please provide a valid state.
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label for="zip" class="form-label">Zip code</label>
                            <input type="text" class="form-control" id="zip" required="">
                            <div class="invalid-feedback">
                                Zip code required.
                            </div>
                        </div>
                    </div>
                    <div class="d-flex flex-wrap justify-content-md-start justify-content-evenly align-items-center text-center my-3">
                        <h4 class="m-0 me-sm-3">Pickup point</h4>
                        <a href="#" class="text-body-emphasis text-decoration-none">( Find out more about pickup points here )</a>
                    </div>
                    <section class="d-flex flex-wrap justify-content-evenly align-items-center my-3">
                        <div class="d-flex flex-column justify-content-center align-items-center">
                            <iframe class="w-100 h-100 border border-1 border-dark" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3106.2790569748067!2d-77.0562669!3d38.871856799999996!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89b7b6df29ed2c27%3A0xaf83d0f8c013532f!2sPentagon!5e0!3m2!1sro!2sro!4v1704702325865!5m2!1sro!2sro" referrerpolicy="no-referrer-when-downgrade"></iframe>
                            <input type="radio" class="btn-check" name="options-base" id="pickup-1" autocomplete="off" checked>
                            <label class="btn my-3" for="pickup-1">Pickup 1</label>
                        </div>
                        <div class="d-flex flex-column justify-content-center align-items-center ms-md-3">
                            <iframe class="w-100 h-100 border border-1 border-dark" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3106.2790569748067!2d-77.0562669!3d38.871856799999996!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89b7b6df29ed2c27%3A0xaf83d0f8c013532f!2sPentagon!5e0!3m2!1sro!2sro!4v1704702325865!5m2!1sro!2sro" referrerpolicy="no-referrer-when-downgrade"></iframe>
