<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books</title>
    <link rel="shortcut icon" href="/misc/logo.png" type="image/x-icon">

    <!-- Google fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Montserrat:wght@300;400&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/media.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm navbar-light mx-md-5 mx-3">
        <a class="navbar-brand fw-bold" href="/">Bibliofy</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar"
            aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar">
            <div class="mx-auto">
                <ul class="navbar-nav mb-0">
                    <li class="nav-item d-flex align-items-center">
                        <a class="nav-link text-dark" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <a class="nav-link active text-secondary" href="/api/books">Books</a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <a class="nav-link text-dark" href="/account">Account</a>
                    </li>
                    <li class="nav-item d-flex align-items-center">
                        <a class="nav-link text-dark" href="/contact">Contact Us</a>
                    </li>
                </ul>
            </div>
            <form action="/cart" method="GET">
                <button class="btn btn-outline-dark" type="submit">
                    <div class="d-flex align-items-center">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                            aria-label="Cart" class="bi bi-cart2 mx-auto mb-1" viewBox="0 0 16 16">
                            <path
                                d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l1.25 5h8.22l1.25-5zM5 13a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
                        </svg>
                        <span class="badge rounded-pill bg-dark counter ms-3">
                            <%= (user==undefined ? 0 : user.cart.totalProducts) %>
                        </span>
                    </div>
                </button>
            </form>
        </div>
    </nav>
    <!-- Header -->
    <header class="bg-dark py-5">
        <div class="text-center text-white my-5 mx-3">
            <h1 class="display-4 fw-bold">Read in style</h1>
            <p class="lead fw-normal text-white-50 m-0">
                With this vast selection of titles
            </p>
        </div>
    </header>
    <!-- Added to cart notification -->
    <div id="notification-box" class="hidden"></div>
    <!-- Content -->
    <main class="row m-0 mb-5">
        <!-- Sidebar -->
        <section class="col-md-3 col-sm-4 col-12 ps-3 pt-5">
            <ul class="list-unstyled m-0 mb-3">
                <li class="mb-3">
                    <h4 class="fw-bold">Categories</h4>
                </li>
                <li class="mb-1">
                    <a class="link-body-emphasis text-decoration-none" href="/api/books">All categories</a>
                </li>
                <li class="mb-1">
                    <a class="link-body-emphasis text-decoration-none" href="/api/books/art">Art</a>
                </li>
                <li class="mb-1">
                    <a class="link-body-emphasis text-decoration-none" href="/api/books/fiction">Fiction</a>
                </li>
                <li class="mb-1">
                    <a class="link-body-emphasis text-decoration-none" href="/api/books/theatre">Theatre</a>
                </li>
                <li class="mb-1">
                    <a class="link-body-emphasis text-decoration-none" href="/api/books/psychology">Psychology</a>
                </li>
                <li class="mb-1">
                    <a class="link-body-emphasis text-decoration-none" href="/api/books/history">History</a>
                </li>
                <li class="mb-1">
                    <a class="link-body-emphasis text-decoration-none" href="/api/books/kids">Kids</a>
                </li>
                <li class="mb-1">
                    <a class="link-body-emphasis text-decoration-none" href="/api/books/religion">Religion</a>
                </li>
                <li class="mb-1">
                    <a class="link-body-emphasis text-decoration-none" href="/api/books/nature">Nature</a>
                </li>
                <li class="mb-1">
                    <a class="link-body-emphasis text-decoration-none" href="/api/books/business">Business</a>
                </li>
                <li class="mb-1">
                    <a class="link-body-emphasis text-decoration-none" href="/api/books/language">Language</a>
                </li>
                <li>
                    <a class="link-body-emphasis text-decoration-none" href="/api/books/internet">Internet</a>
                </li>
            </ul>
            <div class="pt-3">
                <h4 class="fw-bold">Filter</h4>
                <div class="panel-body mt-3">
                    <form method="post" action="/api/books/filter" role="form product-form">
                        <div class="form-group">
                            <label for="inputYear">Year</label>
                            <input type="text" id="inputYear" name="year" class="form-control" autocomplete="off">
                        </div>
                        <div class="form-group mt-3">
                            <label for="inputAuthor">Author</label>
                            <input type="text" id="inputAuthor" name="author" class="form-control" autocomplete="off">
                        </div>
                        <div class="form-group mt-3">
                            <label for="inputPrice">Price</label>
                            <select class="form-control hasCustomSelect" name="price">
                                <option selected>Select range</option>
                                <option value="1">0-10$</option>
                                <option value="2">10-20$</option>
                                <option value="3">20-40$</option>
                                <option value="4">Over 40$</option>
                            </select>
                        </div>
                        <button class="btn btn-dark px-sm-3 px-5 mt-3" type="submit">Filter</button>
                    </form>
                </div>
            </div>
        </section>
        <!-- Products -->
        <section class="col-md-9 col-sm-8 col-12 my-sm-5 mt-5">
            <div class="row m-0 justify-content-center">
                <% books.forEach(book=> { %>
                    <div class="col-xxl-3 col-lg-4 col-md-6 col-12 mb-5 px-3">
                        <div class="card h-100">
                            <!-- Product image-->
                            <img class="card-img-top h-100" src=<%=book.image %> alt="...">
                            <!-- Product details-->
                            <div class="card-body text-center p-3">
                                <!-- Product name-->
                                <h5 class="fw-bold m-0">
                                    <a href="/api/book/<%= book._id %>" class="header_ref" style="text-decoration: none;">
                                        <% if(book.title.length> 30){ %>
                                            <% book.title=book.title.substring(0, 40) + "..." ; %>
                                                <% } %>
                                                    <%= book.title %>
                                    </a>
                                </h5>
                            </div>
                            <!-- Product actions-->
                            <div
                                class="card-footer d-flex justify-content-evenly align-items-center border-top-0 bg-transparent p-3">
                                
                                <button type="button"
                                    class="addCart text-decoration-none link-body-emphasis border-0 bg-transparent"
                                    value="<%= book._id %>">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="currentColor"
                                        class="bi bi-bag-plus" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd"
                                            d="M8 7.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V12a.5.5 0 0 1-1 0v-1.5H6a.5.5 0 0 1 0-1h1.5V8a.5.5 0 0 1 .5-.5" />
                                        <path
                                            d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1m3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1z" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </section>
    </main>
    <!-- Footer -->
    <%- include("partials/footer") -%>
    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="/scripts/books.js"></script>
</body>
</html>